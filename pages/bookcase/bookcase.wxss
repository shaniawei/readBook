page{
  padding: 0 40rpx;
}
.bigTitle{
  width: 60%;
  background-color: #ddd;
  margin: 0 auto 40rpx;
  border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
  display: flex;
  justify-content: space-between;
}
.bigTitle text{
  display: inline-block;
  width: 100%;
  height: 100%;
}
.bigTitle text.history{
  border-radius: 40rpx 0 0 40rpx;
}
.bigTitle text.collect{
  border-radius: 0 40rpx 40rpx 0;
}
.bigTitle text.active{
  background-color: #333;
  color: #fff;
}

.bookItem{
  margin-bottom: 40rpx;
  margin-right: 40rpx;
  text-align: center;
  display: inline-block;
}
image{
  width: 300rpx;
  height: 400rpx;
  display: block;
}