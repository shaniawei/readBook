/**app.wxss**/
@import './wxParser/index.wxss';
page{
  padding: 0 30rpx;
  box-sizing: border-box;
}

view {
  -webkit-tap-highlight-color: rgba(0,0,0,0);
} 
.clearfix::after{
  content: ".";
  display: block;
  line-height: 0;
  clear: both;
  visibility: hidden;
}
.fl-r{
  float: right;
}
.fl-l{
  float: left;
}

.cover_view{
  position: fixed;
  z-index: 2;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0; 
  background-color: #fff;
}


/*书籍列表样式  */
.bookItem{
  width: 200rpx;
  margin-bottom: 40rpx;
  text-align: center;
  display: inline-block;
  position: relative;
}
.bookItem:nth-child(3n-1){
  margin: 0 45rpx 40rpx;
}
.bookItem image{
  width: 100%;
  height: 300rpx;
  display: block;
  box-shadow: 1px 1px 10px #ddd;
  margin-bottom: 20rpx;
  background-color: #ddd;
}
.bookItem .txt{
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.own-defined{
  color: #fff;
  font-size: 28rpx;
  background-color: rgba(0,0,0,0.8);
  position:absolute;
  right:0;
  padding:10rpx;

}


 
